{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],                   
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@types/eslint"],
    "paths": {
      "@src/*": ["src/*"]
    },
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register",
      "./config.ts"
    ],
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "tests/**/*.ts",
    "config.ts",
    "scripts",
    "eslint.config.ts"
  ],
  "exclude": [
    "src/public/*"
  ]
}
