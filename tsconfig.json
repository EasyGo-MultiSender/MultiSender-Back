{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@types/eslint", "jest"],
    "paths": {
      "@src/*": ["src/*"],
      "@config/*": ["config/*"]
    },
    "useUnknownInCatchVariables": false,
    "incremental": true
  },
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register", "./config.ts"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/public/*"]
}
